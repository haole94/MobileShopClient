@{
    Layout = "~/_SiteLayout.cshtml";
    Page.Title = "Quản lý sản phẩm";
}

<section>
    <div class="container">
        <div class="row" ng-controller="productManagementFunc">
            <div class="col-sm-3">
                <div class="left-sidebar">

                    <div class="brands_products">

                        <h2>Hãng</h2>
                        <!--getBrand Controller-->
                        <div class="brands-name">
                            <div class="btn-group">
                                <button type="button" ng-model="sideBarBrand" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    {{sideBarBrand}} <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li ng-repeat="x in navBrand"><a href="#" ng-click="selectBrand(x)">{{x.Name}}</a></li>
                                </ul>
                            </div>

                        </div>

                    </div>

                </div>

                <div class="left-sidebar">

                    <div class="brands_products">

                        <h2>Sản phẩm</h2>
                        <!--getBrand Controller-->
                        <div class="brands-name">
                            <div class="btn-group">
                                <button type="button" ng-model="sideBarProduct" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    {{sideBarProduct}} <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li ng-repeat="x in navProduct"><a href="#" ng-click="selectProduct(x)">{{x.Name}}</a></li>
                                </ul>
                            </div>
                        </div>

                    </div>

                </div>
            </div>

            <div class="col-sm-9 padding-right">

                <div class="product-details">

                    <div class="col-sm-5">
                        <div class="view-product">
                            <img ng-src="data:image/png;base64,{{displayImage}}" alt="No image" />
                        </div>
                        <br />
                        <div>
                            <form ng-submit="UploadImage()">
                                <input type="file" accept="image/*" id="Image" required />
                                <br />
                                <button type="submit" class="btn btn-success">Upload</button>
                            </form>
                        </div>
                    </div>
                    <div class="col-sm-7">

                        <div class="signup-form">
                            <!--sign up form-->
                            <h2>Chi tiết sản phẩm</h2>
                            <form ng-submit="updateProduct()">
                                <p>Hiển thị sản phẩm</p>
                                <div class="input-group-btn">
                                    <button type="button" ng-model="visible" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        {{visible}} <span class="caret"></span>
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a href="#" ng-click="visible = 'On'">On</a></li>
                                        <li><a href="#" ng-click="visible = 'Off'">Off</a></li>
                                    </ul>
                                </div><!-- /btn-group -->
                                <br />
                                <input type="text" placeholder="Tên sản phẩm" ng-model="Name" required />
                                <div class="input-group-btn">
                                    <button type="button" ng-model="Brand" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        {{Brand.Name}} <span class="caret"></span>
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li ng-repeat="x in navBrand"><a href="#" ng-click="changeBrand(x)">{{x.Name}}</a></li>
                                    </ul>
                                </div><!-- /btn-group -->
                                <br />
                                <input type="number" placeholder="Giá tiền" ng-model="Price" required />
                                <p ng-model="warning5">{{warning5}}</p>
                                <input type="text" placeholder="Màn hình" ng-model="Screen" required />
                                <input type="text" placeholder="Camera chính" ng-model="PrimaryCamera" required />
                                <input type="text" placeholder="Camera phụ" ng-model="SecondaryCamera" required />
                                <input type="text" placeholder="Hệ điều hành" ng-model="OS" required />
                                <input type="text" placeholder="CPU" ng-model="CPU" required />
                                <input type="text" placeholder="Chip đồ họa" ng-model="GraphicChip" required />
                                <input type="text" placeholder="RAM" ng-model="RAM" required />
                                <input type="text" placeholder="Bộ nhớ trong" ng-model="Storage" required />
                                <input type="text" placeholder="Hỗ trợ thẻ tối đa" ng-model="SD" required />
                                <input type="text" placeholder="Số khe SIM" ng-model="SIM" required />
                                <input type="text" placeholder="Dung lượng pin" ng-model="Battery" required />
                                <input type="text" placeholder="Kết nối" ng-model="Comms" required />

                                <div class="pull-left">
                                    <button type="submit" class="btn btn-info">
                                        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Cập nhật
                                    </button>
                                </div>

                            </form>

                        </div><!--/sign up form-->
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/scripts/custom/productManagement.js"></script>
}
